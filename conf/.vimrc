set confirm
set nocompatible

set encoding=utf-8
set fencs=utf-8,ucs-bom,shift-jis,bg18030,gbk,gb2312,cp936
set fileencodings=utf-8,ucs-bom,chinese

set nobackup
set nowritebackup
set noswapfile

set number
set ruler

set expandtab
set tabstop=4
set softtabstop=4
set shiftwidth=4
set shiftround
set smartindent

set hlsearch
set incsearch
set ignorecase
set smartcase
set showmatch

syntax on
filetype plugin on
filetype indent on
filetype plugin on
